<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane id="pane" stylesheets="lightstyle.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cz.vse.stepan.MainController">
   <VBox alignment="BOTTOM_LEFT">
      <children>
         <ImageView fitHeight="50.0" fitWidth="1280.0" nodeOrientation="INHERIT" pickOnBounds="true">
            <image>
               <Image url="@wooden.jpg" />
            </image>
            <effect>
               <DropShadow />
            </effect></ImageView>
         <ImageView fx:id="imageVw" fitHeight="320.0" fitWidth="1280.0" nodeOrientation="INHERIT" pickOnBounds="true" preserveRatio="true">
            <effect>
               <InnerShadow />
            </effect></ImageView>
         <ImageView fitHeight="350.0" fitWidth="1280.0" nodeOrientation="INHERIT">
            <image>
               <Image url="@wooden.jpg" />
            </image>
            <effect>
               <DropShadow />
            </effect>
            <viewport>
               <Rectangle2D />
            </viewport>
         </ImageView>
      </children>
   </VBox>
    <BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="720.0" prefWidth="1280.0">
        <top>
            <AnchorPane>
                <MenuBar maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="50.0" prefWidth="150.0">
                    <Menu styleClass="lightstyle.css" text="MENU">
                        <MenuItem onAction="#startNewGame" text="Nová hra" />
                        <MenuItem onAction="#getHint" text="Nápověda" />
                    </Menu>
                </MenuBar>
                <VBox prefHeight="40.0" AnchorPane.leftAnchor="160.0">
                    <Label fx:id="locationName" textFill="WHITE">
                  <font>
                     <Font size="24.0" />
                  </font></Label>
                    <Label fx:id="locationDescription" textFill="WHITE">
                    <font>
                        <Font size="16.0" />
                    </font></Label>
                </VBox>
                <ImageView fitHeight="50.0" fitWidth="50.0" preserveRatio="true" AnchorPane.rightAnchor="10.0">
               <image>
                  <Image fx:id="settings" url="@settings.png" />
               </image></ImageView>
            </AnchorPane>
        </top>
        <left>
        </left>
        <bottom>
            <SplitPane dividerPositions="0.5, 0.5" prefHeight="300.0" BorderPane.alignment="CENTER">
                <items>
                    <ImageView fitHeight="300.0" fitWidth="300.0" pickOnBounds="true" preserveRatio="true" />
                    <VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="300.0" prefWidth="630.0">
                        <children>
                            <TextArea fx:id="textOutput" editable="false" maxHeight="-Infinity" minHeight="-Infinity" prefHeight="270.0" />
                            <TextField fx:id="textInput" maxHeight="-Infinity" minHeight="-Infinity" onKeyPressed="#onInputKeyPressed" prefHeight="30.0" />
                        </children>
                    </VBox>
                    <GridPane alignment="CENTER_LEFT" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="300.0" prefWidth="300.0">

                        <children>

                            <TitledPane alignment="CENTER" collapsible="false" expanded="true" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="150.0" prefWidth="150.0" text="PŘEDMĚTY" textAlignment="CENTER" GridPane.valignment="CENTER">

                                <VBox fx:id="items" spacing="1">
                                </VBox>
                        <font>
                           <Font name="Franklin Gothic Book" size="14.0" />
                        </font>
                            </TitledPane>
                            <TitledPane alignment="CENTER" collapsible="false" expanded="true" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="150.0" prefWidth="150.0" text="INVENTÁŘ" textAlignment="CENTER" GridPane.columnIndex="1" GridPane.valignment="CENTER">
                                <VBox fx:id="inventory" spacing="1">
                                </VBox>
                                <font>
                                    <Font name="Franklin Gothic Book" size="14.0" />
                                </font>
                            </TitledPane>
                            <TitledPane alignment="CENTER" collapsible="false" expanded="true" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="150.0" prefWidth="150.0" text="OSOBY" textAlignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER">
                                <VBox fx:id="people" spacing="1">
                                </VBox>
                                <font>
                                    <Font name="Franklin Gothic Book" size="14.0" />
                                </font>
                            </TitledPane>
                            <TitledPane alignment="CENTER" collapsible="false" expanded="true" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="150.0" prefWidth="150.0" text="VÝCHODY" textAlignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.valignment="CENTER">
                                <VBox fx:id="exits" spacing="1">
                                </VBox>
                                <font>
                                    <Font name="Franklin Gothic Book" size="14.0" />
                                </font>
                            </TitledPane>
                        </children>
                        <columnConstraints>
                            <ColumnConstraints />
                            <ColumnConstraints />
                        </columnConstraints>
                        <rowConstraints>
                            <RowConstraints />
                            <RowConstraints />
                        </rowConstraints>

                    </GridPane>
                </items>
            <effect>
               <InnerShadow />
            </effect>
            <BorderPane.margin>
               <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </BorderPane.margin>
            <opaqueInsets>
               <Insets />
            </opaqueInsets>
            <padding>
               <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
            </SplitPane>
        </bottom>
    </BorderPane>


</StackPane>
